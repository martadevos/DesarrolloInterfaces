<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UI_Ejercicio3_U7_DI.MainPage">

    <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
        
        <Entry x:Name="txtNombre"
               Placeholder="Nombre"/>

        <Entry x:Name="txtApellidos"
               Placeholder="Apellidos"/>

        <Button x:Name="btnIrAPaginaTabbed"
                Text="Ir a PaginaTabbed"
                Clicked="btnIrAPaginaTabbed_Clicked"/>
        
        <Button x:Name="btnIrAPaginaCuatro"
                Text="Ir a Pagina4"
                Clicked="btnIrAPaginaCuatroYCinco_Clicked"/>
        
        <Button x:Name="btnIrAPaginaCinco"
                Text="Ir a Pagina5"
                Clicked="btnIrAPaginaCuatroYCinco_Clicked"/>

    </VerticalStackLayout>

</ContentPage>
