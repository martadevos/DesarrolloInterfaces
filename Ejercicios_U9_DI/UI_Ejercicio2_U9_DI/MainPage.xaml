<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:modelos="clr-namespace:UI_Ejercicio2_U9_DI.Models"
             x:Class="UI_Ejercicio2_U9_DI.MainPage">

    <ContentPage.BindingContext>
        <modelos:clsPersona/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry
                Text="{Binding Nombre}"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="{Binding Nombre}"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
