<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:UI_Ejercicio3_U9_DI.ViewModels"
             x:Class="UI_Ejercicio3_U9_DI.MainPage">

        <ContentPage.BindingContext>
            <viewModels:clsPersonaVM/>
        </ContentPage.BindingContext>

        <ScrollView>
            <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

                <Entry
                Text="{Binding Nombre}"
                FontSize="32"
                HorizontalOptions="Center" />

                <Label
                Text="{Binding Nombre}"
                FontSize="18"
                HorizontalOptions="Center" />

            </VerticalStackLayout>
        </ScrollView>
</ContentPage>